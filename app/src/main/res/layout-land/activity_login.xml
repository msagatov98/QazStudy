<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.ActivityLogin"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_login__ic_qaz_study"
            android:src="@drawable/icon_android"
            android:layout_marginTop="75dp"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/app_name" />

        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/app_name"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:text="@string/app_name"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/activity_login__ic_qaz_study"/>

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/txt_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_marginEnd="15dp"
            android:importantForAutofill="no"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/txt_color"
            android:id="@+id/activity_login__input_email"
            android:background="@drawable/bg_btn_exit_light"
            android:hint="@string/activity_profile__hint_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toTopOf="@id/activity_login__ic_qaz_study"/>

        <EditText
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:inputType="textPassword"
            android:layout_marginStart="15dp"
            android:importantForAutofill="no"
            android:layout_height="wrap_content"
            android:textColorHint="@color/txt_color"
            android:background="@drawable/bg_btn_exit_light"
            android:id="@+id/activity_login__input_password"
            android:hint="@string/activity_profile__hint_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/activity_login__input_email"/>

        <Button
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="@string/login"
            android:layout_width="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_login_color"
            android:background="@drawable/btn_login_bg"
            android:id="@+id/activity_login__btn_login"
            android:stateListAnimator="@animator/btn_login_animator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/activity_login__input_password"/>

        <ImageView
            android:onClick="onClick"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/ic_facebook"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_facebook_light"
            android:contentDescription="@string/all_image_description"
            app:layout_constraintEnd_toStartOf="@id/ic_google"
            app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login" />

        <ImageView
            android:onClick="onClick"
            android:contentDescription="@string/all_image_description"
            android:layout_marginTop="25dp"
            android:id="@+id/ic_google"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_google_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login"/>

        <ImageView
            android:onClick="onClick"
            android:contentDescription="@string/all_image_description"
            android:layout_marginTop="25dp"
            android:id="@+id/ic_twitter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_twitter_light"
            app:layout_constraintStart_toEndOf="@id/ic_google"
            app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login"/>

        <TextView
            android:onClick="onClick"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/txt_sign_up"
            android:textColor="@color/txt_color"
            android:text="@string/create_account"
            android:background="@drawable/top_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
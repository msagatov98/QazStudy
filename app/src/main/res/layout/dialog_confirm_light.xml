<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/dialog_title"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="0dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        android:id="@+id/dialog_confirm__cancel"
        android:background="@drawable/top_line_cencel_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        app:layout_constraintEnd_toStartOf="@id/dialog_confirm__ok"/>
    <Button
        android:layout_width="0dp"
        android:layout_marginTop="25dp"
        android:text="@android:string/ok"
        android:id="@+id/dialog_confirm__ok"
        android:layout_height="wrap_content"
        android:background="@drawable/top_line_ok_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        app:layout_constraintStart_toEndOf="@id/dialog_confirm__cancel"/>

</androidx.constraintlayout.widget.ConstraintLayout>
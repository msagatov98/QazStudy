<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ActivityLogin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_login__ic_qaz_study"
        android:src="@drawable/icon_android"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_login__input_email" />

    <TextView
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="QazStudy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_login__ic_qaz_study"/>

    <EditText
        android:paddingStart="15dp"
        android:hint="Email"
        android:id="@+id/activity_login__input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/activity_login__input_password"/>

    <EditText
        android:paddingStart="15dp"
        android:hint="Password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/activity_login__input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/activity_login__btn_login"
        android:text="Login"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/bg_btn_exit_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_login__input_password"/>

    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/ic_facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_facebook_light"
        app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login"
        app:layout_constraintEnd_toStartOf="@id/ic_linkedin"/>
    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/ic_linkedin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_linkedin_light"
        app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login"
        app:layout_constraintEnd_toStartOf="@id/ic_google"/>

    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/ic_google"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_google_light"
        app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/ic_twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_twitter_light"
        app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login"
        app:layout_constraintStart_toEndOf="@id/ic_google"/>
    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/ic_vkontakte"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_vk_light"
        app:layout_constraintTop_toBottomOf="@id/activity_login__btn_login"
        app:layout_constraintStart_toEndOf="@id/ic_twitter"/>

</androidx.constraintlayout.widget.ConstraintLayout>
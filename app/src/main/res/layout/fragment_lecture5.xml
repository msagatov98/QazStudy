<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.fragment.lecture.FragmentLecture5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:id="@+id/lecture_5_text_1"
            android:text="@string/lecture_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/lecture_5_text_q"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="\?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lecture_5_text_p"
            app:layout_constraintTop_toBottomOf="@id/lecture_5_text_1"/>
        <TextView
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/lecture_5_text_p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="\+"
            app:layout_constraintEnd_toStartOf="@id/lecture_5_text_n"
            app:layout_constraintStart_toEndOf="@id/lecture_5_text_q"
            app:layout_constraintTop_toBottomOf="@id/lecture_5_text_1"/>
        <TextView
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/lecture_5_text_n"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="\-"
            app:layout_constraintStart_toEndOf="@id/lecture_5_text_p"
            app:layout_constraintEnd_toStartOf="@id/fut"
            app:layout_constraintTop_toBottomOf="@id/lecture_5_text_1"/>

        <ImageView
            android:id="@+id/img"
            android:src="@drawable/ic_facebook_light"
            android:layout_width="0dp"
            android:layout_height="355dp"
            app:layout_constraintEnd_toStartOf="@id/now"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lecture_5_text_p"/>

        <TextView
            android:rotation="90"
            android:id="@+id/fut"
            android:text="asdf"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintBottom_toTopOf="@id/now"/>
        <TextView
            android:rotation="90"
            android:id="@+id/now"
            android:text="asdf"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fut"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintBottom_toTopOf="@id/pas"/>
        <TextView
            android:rotation="90"
            android:id="@+id/pas"
            android:text="asdf"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/now"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintBottom_toBottomOf="@id/img"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
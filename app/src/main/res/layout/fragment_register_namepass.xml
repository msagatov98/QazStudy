<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/fragment_register__title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter name and password"/>


    <EditText
        android:hint="@string/activity_profile__hint_name"
        android:id="@+id/fragment_register__input_name"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_exit_light"
        app:layout_constraintTop_toBottomOf="@id/fragment_register__title"/>

    <EditText
        android:hint="@string/activity_profile__hint_password"
        android:id="@+id/fragment_register__input_password"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_exit_light"
        app:layout_constraintTop_toBottomOf="@id/fragment_register__input_name"/>

    <Button
        android:text="Register"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_bg"
        app:layout_constraintTop_toBottomOf="@id/fragment_register__input_password"/>

</androidx.constraintlayout.widget.ConstraintLayout>
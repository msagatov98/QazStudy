<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/container">

    <com.github.florent37.shapeofview.shapes.PolygonView
        android:layout_marginStart="20dp"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:id="@+id/ic_task"
        app:shape_polygon_noOfSides="6"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:src="@drawable/ic_android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/all_image_description" />
    </com.github.florent37.shapeofview.shapes.PolygonView>

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/header"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="@id/ic_task"
        app:layout_constraintStart_toEndOf="@id/ic_task"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#999da4"
        android:id="@+id/description"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ic_task"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"/>

    <ProgressBar
        android:progress="50"
        android:layout_width="0dp"
        android:id="@+id/progress_bar"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content"
        android:progressTint="@color/orange"
        android:progressBackgroundTint="#999da4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_task"
        app:layout_constraintBottom_toBottomOf="@id/ic_task"
        style="?android:attr/progressBarStyleHorizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
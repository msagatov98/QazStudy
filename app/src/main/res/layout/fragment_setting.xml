<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/locale_ru"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/russia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/locale_tr"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/turkey"
        app:layout_constraintTop_toBottomOf="@id/locale_ru"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/locale_en"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/united_kingdom"
        app:layout_constraintTop_toBottomOf="@id/locale_tr"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>